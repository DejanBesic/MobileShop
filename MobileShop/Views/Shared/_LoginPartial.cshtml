@{if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("Logout", "Auth", FormMethod.Get, new { id = "logoutForm", @class = "navbar-right", style = "color: #FF7417; font-size: medium;" }))
        {
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="ListsDropDown" data-toggle="dropdown" style="color: #FF7417; font-size: medium" aria-haspopup="true" aria-expanded="false">
                My Account
            </a>
            <div class="dropdown-menu" style="background-color: #333; width: auto;">
                <div style="padding: 10px;">
                    @Html.ActionLink("Settings", "Edit", "Account", routeValues: null, htmlAttributes: new { style = "color: #FF7417; font-size: medium;" })
                </div>
                <div style="padding: 10px;">
                    @Html.ActionLink("History", "History", "Shopping", routeValues: null, htmlAttributes: new { style = "color: #FF7417; font-size: medium;" })
                </div>
            </div>
        </li>
        <li>
            @Html.ActionLink("Cart", "Index", "Shopping", routeValues: null, htmlAttributes: new { style = "color: #FF7417; font-size: medium;" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color: #FF7417; font-size: medium;">Log off</a></li>
    </ul>
        }
    }
    else
    {
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Auth", routeValues: null, htmlAttributes: new { id = "registerLink", style = "color: #FF7417; font-size: medium;" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink", style = "color: #FF7417; font-size: medium;" })</li>
    </ul>
        }
    }