@model IEnumerable<Models.MobileM>

@Scripts.Render("~/Content/Mobile/Mobile.js")

<div class="row" style="margin-left: 15px; margin-right: 15px;">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <h2>Add mobile to your shop</h2>
        <table class="table">
            <tr><th>Id</th><th>Name</th><th>Price</th><th>Amount</th><th></th></tr>
            @foreach (var mobile in Model)
            {
            <tr id=@mobile.Id>
                <td>@mobile.Id</td>
                <td>@mobile.Name</td>
                <td style="width: 100px;"><input id="price_@mobile.Id" min="0" class="form-control" type="number" /></td>
                <td style="width: 100px;"><input id="amount_@mobile.Id" min="0" class="form-control" type="number" /></td>
                <td><button class="btn-warning" onclick="Add(@mobile.Id)">Add</button></td>
            </tr>
            }
        </table>
    </div>
</div>