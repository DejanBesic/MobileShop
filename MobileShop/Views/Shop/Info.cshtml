@model Models.ShopM

@Styles.Render("~/Content/Home/Filter.css")

@using (Html.BeginForm("Save", "Shop", FormMethod.Post, new { @class = "login-form" }))
{
    <div class="row" style="margin-left: 15px; margin-right: 15px;">
        <div class="col-sm-3"></div>
        <div class="col-sm-6" style="text-align: center;">
            <div style="margin-top: 15px; margin-bottom: 15px;">
                @Html.TextBoxFor(x => Model.Id, Model.Id.ToString(), new { @class = "form-control", style = "display: none;" })
            </div>
            <div style="margin-top: 15px; margin-bottom: 15px;">
                @Html.Label("Name")
                @Html.TextBoxFor(x => Model.ShopName, Model.ShopName, new { @class = "form-control", style = "margin: 0 auto;" })
            </div>
            <div style="margin-top: 15px; margin-bottom: 15px; ">
                @Html.Label("Phone number")
                @Html.TextBoxFor(x => Model.ContactPhone, Model.ContactPhone, new { @class = "form-control", style = "margin: 0 auto;" })
            </div>
            <div style="margin-top: 15px; margin-bottom: 15px; ">
                @Html.Label("Mobile phone number")
                @Html.TextBoxFor(x => Model.ContactMobilePhone, Model.ContactMobilePhone, new { @class = "form-control", style = "margin: 0 auto;" })
            </div>
            <div style="margin-top: 15px; margin-bottom: 15px; ">
                @Html.Label("Address")
                @Html.TextBoxFor(x => Model.ContactAddress, Model.ContactAddress, new { @class = "form-control", style = "margin: 0 auto;" })
            </div>
            <div style="margin-top: 15px; margin-bottom: 15px; ">
                @Html.Label("Time when open")
                @Html.TextBoxFor(x => Model.OpenTime, Model.OpenTime, new { @class = "form-control", style = "margin: 0 auto;" })
            </div>
            <div style="text-align: center;">
                <input class="btn cust-btn " type="submit" id="btn-registration" style="font-size: 16px; letter-spacing: 1px; width: 100px;" value="Save" />
            </div>
        </div>
    </div>
}
