@model MobileShop.Models.LoginDTO
@{
    ViewBag.Title = "View";
}

@Styles.Render("~/Content/Login/Login.css")

@{ if(Request.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
}

<div class="col-sm-4"></div>
<div class="login col-sm-4" style="text-align: center; padding-left: 70px; padding-right: 70px; ">
    <h2 align="center" style="color: beige">Log in</h2>
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "login-form" }))
    {
        <div>
            <span class="fontawesome-user form-span"></span>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-input", id = "Email", placeholder = "Email" })
        </div>
        <div>
            <span class="fontawesome-lock form-span"></span>
            @Html.PasswordFor(m => m.Password, new { @class = "form-input", id = "Password", placeholder = "Password" })
            @Html.ValidationMessage("LoginError", new { style = "color: red;" })
        </div>
        <div>
            <input type="submit" value="Log in" class="submit-button" />
            <p style="padding: 10px;">
                @Html.ActionLink("Register as a new user", "Register")
            </p>
        </div>

    }
</div>
