@model MobileShop.Models.RegisterDTO

@Styles.Render("~/Content/Register/Register.css")

@{ if (Request.IsAuthenticated)
    {
        Response.Redirect("/Home");
    }
}

<div class="col-sm-4"></div>
<div class="login col-sm-4" style="text-align: center;">
    <div style="margin: 50px"></div>
    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "login-form" }))
    {
        <h3 style="color: aliceblue;">Registration</h3>
        <div>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-input", id = "FirstName", placeholder = "First Name" })
        </div>

        <div>
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-input", id = "LastName", placeholder = "Last Name" })
        </div>

        <div>
            @Html.TextBoxFor(m => m.Address, new { @class = "form-input", id = "Address", placeholder = "Address" })
        </div>

        <div>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-input", id = "Email", placeholder = "Email" })
        </div>

        <div>
            @Html.PasswordFor(m => m.Password, new { @class = "form-input", id = "Password", placeholder = "Password" })
        </div>

        <div>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input", id = "ConfirmPassword", placeholder = "Confirm password" })
        </div>

        <div>
            <input type="submit" value="Finish registration" class="submit-button" />
        </div>

    }
</div>
