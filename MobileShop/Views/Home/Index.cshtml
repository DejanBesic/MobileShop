    screenSize.Add(new SelectListItem { Text = "6.2\"", Value = "1" });
    screenSize.Add(new SelectListItem { Text = "5.9\"", Value = "2" });
    screenSize.Add(new SelectListItem { Text = "7.0\"", Value = "3" });
    screenSize.Add(new SelectListItem { Text = "7.7\"", Value = "4" });
    screenSize.Add(new SelectListItem { Text = "7.9\"", Value = "5" });
    screenSize.Add(new SelectListItem { Text = "8.0\"", Value = "6" });
    screenSize.Add(new SelectListItem { Text = "8.9\"", Value = "7" });
    screenSize.Add(new SelectListItem { Text = "9.0\"", Value = "7" });
