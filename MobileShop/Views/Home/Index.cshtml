}

<div class="slidecontainer" style="width: 12%; margin-left: 15px;">
    <div style="margin-top: 10px;">
        @Html.TextBox("SearchBox", null, new { placeholder="Search by name...", @class = "search-input" })
    </div>
    <div style="margin-top: 10px;">
        <span>Price range:</span> <br>
        @Html.TextBox("minOutput", 1, new { id = "minOutput", style="width: 45%; ", placeholder="Min", onInput="onMinValueOutputChange()", min = minValue, max = maxValue, type="number", @class="search-input" }) - 
        @Html.TextBox("maxOutput", 1, new { id = "maxOutput", style = "width: 45%;", placeholder="Max", onInput = "onMaxValueOutputChange()", min = minValue, max = maxValue, type = "number", @class = "search-input" })
    </div>
    <div style="margin-top: 10px;">
        <span>Minimum price:</span>
        <input type="range" min=@minValue max=@maxValue value=@minValue class="slider" id="minRange" oninput="onMinValueSliderChange()">
    </div>
    <div style="margin-top: 10px;">
        <span>Maximum price:</span>
        <input type="range" min=@minValue max=@maxValue value=@maxValue class="slider" id="maxRange" oninput="onMaxValueSliderChange()">
    </div>
</div>

    @* EXTERN MEMORY *@
    <div class="row" style="margin: 15px;">
        <div style="width: 12%">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#externMemory" aria-expanded="false" aria-controls="externMemory" style="width: 100%">Extern memory</button>
            <div class="collapse multi-collapse" id="externMemory">
                <div class="card card-body">
                    <ul>
                        @foreach (var memory in externMemory)
                        {
                            <li>
                                <label class="check">
                                    @memory.Text
                                    @Html.CheckBox(memory.Value, false)
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @* INTERN MEMORY *@
    <div class="row" style="margin: 15px;">
        <div style="width: 12%">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#internMemory" aria-expanded="false" aria-controls="internMemory" style="width: 100%">Intern memory</button>
            <div class="collapse multi-collapse" id="internMemory">
                <div class="card card-body">
                    <ul>
                        @foreach (var memory in internMemory)
                        {
                            <li>
                                <label class="check">
                                    @memory.Text
                                    @Html.CheckBox(memory.Value, false)
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @* SHOPS *@
    <div class="row" style="margin: 15px;">
        <div style="width: 12%">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#shops" aria-expanded="false" aria-controls="shops" style="width: 100%">Shops</button>
            <div class="collapse multi-collapse" id="shops">
                <div class="card card-body">
                    <ul>
                        @foreach (var shop in Shops)
                        {
                            <li>
                                <label class="check">
                                    @shop.ShopName
                                    @Html.CheckBox(shop.Id.ToString(), false)
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @* SCREEN SIZE *@
    <div class="row" style="margin: 15px;">
        <div style="width: 12%">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#screenSize" aria-expanded="false" aria-controls="screenSize" style="width: 100%">Screen size</button>
            <div class="collapse multi-collapse" id="screenSize">
                <div class="card card-body">
                    <ul>
                        @foreach (var size in screenSize)
                        {
                            <li>
                                <label class="check">
                                    @size.Text
                                    @Html.CheckBox(size.Text.ToString(), false)
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @* SCREEN TOUCH *@
    <div class="row" style="margin: 15px;">
        <div style="width: 12%">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#touch" aria-expanded="false" aria-controls="touch" style="width: 100%">Touch</button>
            <div class="collapse multi-collapse" id="touch">
                <div class="card card-body">
                    <ul>
                        <li>
                            <label class="check">
                                Yes
                                @Html.CheckBox("Yes", false)
                                <span class="checkmark"></span>
                            </label>
                        </li>
                        <li>
                            <label class="check">
                                No
                                @Html.CheckBox("No", false)
                                <span class="checkmark"></span>
                            </label>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @* SYSTEM *@
    <div class="row" style="margin: 15px;">
        <div style="width: 12%">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#os" aria-expanded="false" aria-controls="os" style="width: 100%">System</button>
            <div class="collapse multi-collapse" id="os">
                <div class="card card-body">
                    <ul>
                        @foreach (var item in OperativeSystems)
                        {
                            <li>
                                <label class="check">
                                    @item.OS
                                    @Html.CheckBox(item.Id.ToString(), false, new { id = item.Id })
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @* RAM *@
    <div class="row" style="margin: 15px;">
        <div style="width: 12%">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#ram" aria-expanded="false" aria-controls="ram" style="width: 100%">RAM</button>
            <div class="collapse multi-collapse" id="ram">
                <div class="card card-body">
                    <ul>
                        @foreach (var item in Rams)
                        {
                            <li>
                                <label class="check">
                                    @String.Concat(item.Memory)
                                    @Html.CheckBox(item.Id.ToString(), false, new { id = item.Id })
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>


