    screenSize.Add(new SelectListItem { Text = "4.7\"", Value = "12" });
    screenSize.Add(new SelectListItem { Text = "4.8\"", Value = "13" });
    screenSize.Add(new SelectListItem { Text = "5.0\"", Value = "7" });

    screenSize.Add(new SelectListItem { Text = "5.1\"", Value = "1" });
